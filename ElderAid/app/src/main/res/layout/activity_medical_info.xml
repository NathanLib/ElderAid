<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalInfoActivity">


    <LinearLayout
        android:id="@+id/topbarLinear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/medical_tvTitle"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEditInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/transparent"
            android:text="@string/medical_edit"
            android:textColor="@color/pacificblue" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbarLinear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profilePictureArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivProfilePic"

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"

                    android:contentDescription="@string/medical_profilePic_altText"
                    android:src="@drawable/ic_profile" />
                <!--       ^^    purely a placeholder image. When we add real images, we'll edit it for the right format-->


                <LinearLayout
                    android:id="@+id/linearUserData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp">

                        <TextView
                            android:id="@+id/tvNameType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0sp"
                            android:paddingRight="10sp"
                            android:text="@string/medical_tvNameType"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvName"
                            android:textSize="22sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10sp">

                        <TextView
                            android:id="@+id/tvAgeType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0sp"
                            android:paddingRight="10sp"
                            android:text="@string/medical_tvAgeType"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvAge"
                            android:textSize="22sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearBloodType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10sp">

                        <TextView
                            android:id="@+id/tvBloodType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="0sp"
                            android:paddingRight="10sp"
                            android:text="@string/medical_tvBloodType"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvBlood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvBlood"
                            android:textSize="22sp" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/medicationLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tvMedicine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/medical_tvMedication"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:id="@+id/svMedication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="9dp"
                    android:background="#CEE9E9E9">

                    <LinearLayout
                        android:id="@+id/linearMedication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMedication1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication1"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication2"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication3"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication4"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication5"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication6"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication7"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication8"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication9"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvMedication10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvMedication10"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/conditionsLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvConditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16sp"
                    android:layout_marginBottom="7sp"
                    android:text="@string/medical_tvConditions"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:id="@+id/svConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="19dp"
                    android:background="#CEE9E9E9">

                    <LinearLayout
                        android:id="@+id/linearConditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCondition1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition1"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition2"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition3"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition4"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition5"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition6"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition7"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition8"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition9"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvCondition10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_tvCondition10"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/insuranceLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="10sp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/medical_tvInsurance"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnInsurance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8sp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9sp"
                    android:layout_weight="0"
                    android:background="#0ea5c6"
                    android:text="@string/medical_btnInsurance"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emergencyContactLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEmergency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/medical_tvEmergency"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="1dp"
                        android:contentDescription="@string/medical_btnEmerAltCall"
                        app:srcCompat="@drawable/ic_call" />

                    <ImageButton
                        android:id="@+id/textImgBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginBottom="1dp"
                        android:contentDescription="@string/medical_btnEmerAltText"
                        app:srcCompat="@drawable/ic_message" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>





    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:minHeight="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sos" />

        <View
            style="@style/BorderVertical"
            app:layout_constraintBottom_toTopOf="@id/navbar"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:minHeight="80dp"
            android:src="@drawable/ic_home" />

        <View
            style="@style/BorderVertical"
            app:layout_constraintBottom_toTopOf="@id/navbar"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:minHeight="80dp"
            android:src="@drawable/ic_menu" />

        <View
            style="@style/BorderVertical"
            app:layout_constraintBottom_toTopOf="@id/navbar"
            app:layout_constraintLeft_toLeftOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>