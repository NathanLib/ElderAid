<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrescriptionLevelActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/prescription_scrollview"/>

    <ScrollView
        android:id="@+id/prescription_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/BorderHorizontalNavBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/prescription_llAddMedications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/prescription_btnAddMedication"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:id="@+id/prescription_tvAddMedication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/prescription_tvAddMedication"
                    android:textSize="25dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/prescription_tvMyMedications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:height="40dp"
                android:background="@drawable/divider_bloc"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/prescription_tvMyMedications"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/prescription_llAddMedications" />

            <LinearLayout
                android:id="@+id/prescription_llMyMedication1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:background="@drawable/pl_medication_good"
                app:layout_constraintTop_toBottomOf="@id/prescription_tvMyMedications">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/prescription_tvMyMedication1Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tvMyMedication1Name"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prescription_tvMyMedication1ExpDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tvMyMedication1ExpDate"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/prescription_tvMyMedication1Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/prescription_tvMyMedication1Quantity"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prescription_llMyMedication2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:background="@drawable/pl_medication_good"
                app:layout_constraintTop_toBottomOf="@id/prescription_llMyMedication1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/prescription_tvMyMedication2Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tvMyMedication2Name"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prescription_tvMyMedication2ExpDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tvMyMedication2ExpDate"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/prescription_tvMyMedication2Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/prescription_tvMyMedication2Quantity"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prescription_llMyMedication3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:background="@drawable/pl_medication_low"
                app:layout_constraintTop_toBottomOf="@id/prescription_llMyMedication2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/prescription_tvMyMedication3Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tvMyMedication3Name"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prescription_tvMyMedication3ExpDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tvMyMedication3ExpDate"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/prescription_tvMyMedication3Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/prescription_tvMyMedication3Quantity"
                    android:textAlignment="center"
                    android:textColor="@color/darkred"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prescription_llMyMedication4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:background="@drawable/pl_medication_expired"
                app:layout_constraintTop_toBottomOf="@id/prescription_llMyMedication3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/prescription_tvMyMedication4Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tvMyMedication4Name"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prescription_tvMyMedication4ExpDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/prescription_tvMyMedication4ExpDate"
                        android:textColor="@color/lightred"
                        android:textSize="23dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/prescription_tvMyMedication4Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/prescription_tvMyMedication4Quantity"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/BorderHorizontalNavBar"
        style="@style/BorderHorizontal"
        app:layout_constraintBottom_toTopOf="@id/navbar"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:minHeight="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sos" />

        <View
            style="@style/BorderVertical"
            app:layout_constraintBottom_toTopOf="@id/navbar"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:minHeight="80dp"
            android:src="@drawable/ic_home" />

        <View
            style="@style/BorderVertical"
            app:layout_constraintBottom_toTopOf="@id/navbar"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:minHeight="80dp"
            android:src="@drawable/ic_menu" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>