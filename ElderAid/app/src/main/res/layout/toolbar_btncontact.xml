<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pacificblue"
    android:minHeight="?attr/actionBarSize"
    app:titleTextColor="@color/white">


    <Button
        android:id="@+id/toolbar_btnAddContact"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:drawableRight="@drawable/ic_add"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="@string/toolbar_btnAddContact"
        android:textColor="@color/pacificblue"
        android:textSize="15dp" />

    <Button
        android:id="@+id/toolbar_btnImportContact"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="@string/toolbar_btnImportContact"
        android:textColor="@color/pacificblue"
        android:textSize="15dp" />


</androidx.appcompat.widget.Toolbar>
