<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lightgray</item>
    </style>

    <style name="navDivider">
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/lightgray</item>
    </style>

    <style name="BorderHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/darkgray</item>
    </style>

    <style name="BorderVertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/darkgray</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/pacificblue</item>
        <item name="colorPrimary">@color/darkgray</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>
